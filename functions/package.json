{
  "name": "functions",
  "version": "1.0.0",
  "description": "Cloud Functions para Plataforma Mentoria Mario Machado",
  "main": "lib/index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "tsc && cp src/study-content-data.json lib/study-content-data.json",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^4.0.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "nodemailer": "^7.0.10"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^7.0.3",
    "typescript": "^5.0.0"
  },
  "private": true
}
